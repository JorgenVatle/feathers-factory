{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "outDir": "./dist",
    "lib": ["es2022"],
    "isolatedModules": true,
    "strict": true,
    "noImplicitReturns": true,
    "types": [],
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,

    "paths": {
      "feathers-factory": [
        "./packages/feathers-factory/src/index.ts"
      ]
    }

  },
}
